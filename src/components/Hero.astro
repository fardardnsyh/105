---
import { basics } from "@/cv.json";
import Section from "@/components/Section.astro";
import ContactInfo from "@/components/ContactInfo.astro";

const { profiles } = basics;
---

<Section title="">
    <div
        class="flex flex-col-reverse sm:flex-row gap-2 justify-between items-center"
    >
        <div class="flex flex-col gap-3">
            <h1 class="font-bold text-2xl text-center sm:text-left">{basics.name}</h1>
            <h2
                class="font-medium text-base text-center sm:text-left text-neutral-500"
            >
                {basics.label}
            </h2>
            <ContactInfo text={basics.email} network={"Mail"} />
            <ContactInfo text={basics.phone} network={"Phone"} />
            <ContactInfo
                text={`${basics.location.city}, ${basics.location.region}`}
                network={"Location"}
            />
            {
                profiles.map((p) => (
                    <ContactInfo
                        url={p.url}
                        network={p.network}
                        text={p.username}
                    />
                ))
            }
        </div>
        <figure class="w-36">
            <img class="rounded-md" src={basics.image} alt="profile" />
        </figure>
    </div>
</Section>
